<h1>Listing sharelinks</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sharelinks.each do |sharelink| %>
      <tr>
        <td><%= sharelink.link %></td>
        <td><%= sharelink.comment %></td>
        <td><%= link_to 'Show', sharelink %></td>
        <td><%= link_to 'Edit', edit_sharelink_path(sharelink) %></td>
        <td><%= link_to 'Destroy', sharelink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sharelink', new_sharelink_path %>
